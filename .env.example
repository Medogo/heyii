# Application
APP_NAME=heyi
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/heyi_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_TTL=300

# Deepgram (STT)
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_MODEL=nova-2
DEEPGRAM_LANGUAGE=fr-FR

# OpenAI (LLM)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# ElevenLabs (TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_MODEL=eleven_turbo_v2_5

# Twilio (Telephony)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Qdrant (Vector DB)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION=products

# ERP Integration
ERP_API_URL=https://erp.example.com/api
ERP_API_KEY=your_erp_api_key_here
ERP_TIMEOUT=5

# AWS S3 (Audio Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=heyi-audio-recordings

# Security
SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
SENTRY_DSN=
LOG_LEVEL=INFO

# Performance
MAX_CONCURRENT_CALLS=10
AUDIO_BUFFER_SIZE=320
VAD_AGGRESSIVENESS=2



BREVO_API_KEY=xkeysib-votre-cle-api-brevo
BREVO_SENDER_EMAIL=noreply@heyi.com
BREVO_SENDER_NAME=HEYI Agent IA